<div class="row">
  <div class="col-9">  
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Email</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><%= friend.email %></td>
            <td><%= link_to 'View Profile', user_path(friend), class: 'btn btn-sm btn-success' %>
              <%= link_to 'Stop Following', friendship_path(friend), method: :delete, data: { "turbo-method": :delete }, class: 'btn btn-sm btn-warning' %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to "Back to home", root_path, class: "btn btn-outline-info mt-2" %>